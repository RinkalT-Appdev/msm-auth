<div class="page-header">
  <div class="col-md-12">
    <h1>
      Bookmarks
    </h1>

    <a href="/bookmarks/new" class="btn btn-block btn-outline-secondary">
     New Bookmark
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>
          Movie
        </th>

        <th>
          User
        </th>

        <th>
          Actions
        </th>

        <th>
        </th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <tr>
        <td>
          <%= bookmark.movie_id %>
        </td>

        <td>
          <%= bookmark.user_id %>
        </td>

        <td>
          <a href="/bookmarks/<%= bookmark.id %>" class="btn btn-primary">Show</a>
          <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>

        <td>
          <a href="/bookmarks/<%= bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
